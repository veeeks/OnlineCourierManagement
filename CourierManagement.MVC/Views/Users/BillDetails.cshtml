                <h6>
                    @Html.DisplayFor(model => model.Consigner_Name)
                </h6>

                <h5 class="mt-4">
                    @Html.DisplayNameFor(model => model.SAddress)
                </h5>

                <h6>
                    @Html.DisplayFor(model => model.SAddress)
                </h6>

                <h5 class="mt-4">
                    @Html.DisplayNameFor(model => model.SCity)
                </h5>

                <h6>
                    @Html.DisplayFor(model => model.SCity)
                </h6>
            </div>
            &emsp;<div class="col-md-4 offset-2">
                <h5 class="mt-4">
                    @Html.DisplayNameFor(model => model.Consignee_Name)

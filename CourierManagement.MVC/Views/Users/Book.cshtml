@model CourierManagement.MVC.ViewModels.CitiesPricesViewModel

@{
    ViewBag.Title = "Book";
}

<h2 class="mt-3">Book</h2>
<hr />

@using (Html.BeginForm("Book","Users",method:FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
<div class="container">
    
    <div class="row offset-1">
        <div class="col-md-4 offset-1">

           @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.LabelFor(model => model.ConsignerCity, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.ConsignerCity, new SelectList(ViewBag.ConsignerCities, "ConsignerCity", "ConsignerCity"), "Please Select", new { @class = "form-control"@*, name="consignerCity"*@ })
                @Html.ValidationMessageFor(model => model.ConsignerCity, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-4 offset-1">
            <div class="form-group">
                @Html.LabelFor(model => model.ConsigneeCity, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.ConsigneeCity, new SelectList(ViewBag.ConsigneeCities, "ConsigneeCity", "ConsigneeCity"), "Please Select", new { @class = "form-control"@*,name="consigneeCity"*@ })
                    @Html.ValidationMessageFor(model => model.ConsigneeCity, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>

    <div class="row offset-1">
        <div class="col-md-4 offset-1">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.LabelFor(model => model.ConsignmentType, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.ConsignmentType, new SelectList(ViewBag.BillingDetails, "ConsignmentType", "ConsignmentType"), "Please Select", new { @class = "form-control"@*,name="consignmentType"*@ })
                @Html.ValidationMessageFor(model => model.ConsignmentType, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-4 offset-1">
            <div class="form-group">
                @Html.LabelFor(model => model.Weight, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model=>model.Weight, new { htmlAttributes = new { @class = "form-control",placeholder="In Kg's",name="weight" } })
                    @Html.ValidationMessageFor(model => model.Weight, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>

    <div class="row offset-4 mt-2">
        <div class="col-md-2">
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Get Price" name="getPrice" class="btn btn-outline-info" />
                </div>
            </div>
        </div>
        <div class="col-md-2 offset-1">
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Next" name="next" class="btn btn-outline-success" />
                </div>
            </div>
        </div>
    </div>

    @if(ViewBag.totalPrice!=null)
    {
      <h3 class="offset-4"> &emsp;Total Price is Rs @ViewBag.totalPrice . </h3><br />
      <h3 class="offset-1">&emsp;&emsp;Click On Next If You wish to continue with booking of the consignment.</h3>
    }

</div>
}

<div>
    @Html.ActionLink("Back to Home", "Home","Users")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
